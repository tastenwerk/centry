<section class="account-admin">

  <div class="heading">
    {{#link-to 'accounts.new' class="btn btn-primary btn-large new-btn" titleTranslation='account.create_account'}}
      <span class="fa fa-plus"></span>
    {{/link-to}}
    <h1>{{t 'account.admin.organizations'}}</h1>
    <div class="org-dropdown dropdown">
      <button class="dropdown-toggle btn" data-toggle="dropdown">
        {{controllers.application.currentOrganization.name}}
        <span class="fa fa-angle-down"></span>
      </button>
      <ul class="dropdown-menu">
        {{#each org in controllers.application.currentUser.organizations}}
        <li><a href="#" {{action 'selectOrganization' org}}>{{org.name}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>

  <ul class="list list-header">
    <li>
    <div class="list-icon"></div>
    <div class="list-title">{{t 'name'}}</div>
    <div class="list-date">{{t 'created_at'}}</div>
    <div class="list-actions"></div>
    </li>
  </ul>
  <ul class="list">
    {{#each user in content}}
    <li>
    <div class="list-icon">
      <label {{bind-attr class=':label user.admin:label-danger user.editor:label-warning'}}>
        <i class="fa fa-user"></i>
      </label>
    </div>
    <div class="list-title">{{user.name}}</div>
    <div class="list-date">{{formatDate user.created_at}}</div>
    <div class="list-actions dropdown">
      <button class="btn btn-pale dropdown-toggle" data-toggle="dropdown"><i class="fa fa-ellipsis-v"></i></button>
      <ul class="dropdown-menu dropdown-menu-grey pull-right">
        <li><a href="#">{{t 'account.edit'}}</a></li>
        <li><a href="#" class="hover-danger">{{t 'account.suspend_login'}}</a></li>
      </ul>
    </div>
    </li>
    {{/each}}
  </div>
</section>

<div class="form-group">
  <label class="control-label col-md-4">{{labelTranslation}}</label>
  <div class="col-md-8">
    {{#if editValue}}
    <div class="input-group">
    {{input value=value class="form-control"}}
    <div {{action 'saveChanges'}} {{bind-attr class=":input-group-addon :btn hasChanges:btn-primary:btn-default"}}>
      {{t 'save'}}
    </div>
  </div>

    {{else}}
    <span class="form-control">{{value}}</span>
    {{/if}}
  </div>
</div>

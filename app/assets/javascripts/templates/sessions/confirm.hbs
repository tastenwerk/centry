<div class="login-wrap">

  <form {{action 'checkCode' on='submit'}} class="card">

    <div class="logo">
      <img src="/favicon.png" class="logo-img">
    </div>

    <div  class="alert">{{t 'confirmation_code_has_been_sent'}}</div>
    {{#if message}}
    <div {{bind-attr class=":alert valid:alert-info:alert-danger error:alert-danger"}}>{{{message}}}</div>
    {{/if}}

    <div {{bind-attr class=":password-group :form-group errors.password:field-with-errors"}}>
      {{input class="confirmation-code" min="4" max="4" value=confirmation_code class="form-control" autocapitalize="off" autocorrect="off" autocomplete="off"}}
    </div>

    <div class="form-group">
      <input type="submit" class="btn btn-primary form-control" {{translateAttr value='continue'}}>
    </div>

    <div class="form-group center">
      {{#link-to 'sessions.index'}}{{t 'back_to_login'}}{{/link-to}}
    </div>

  </form>
</div>

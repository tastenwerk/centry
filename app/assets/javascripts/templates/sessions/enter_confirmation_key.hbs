<div class="login-wrap">

  <form {{action 'checkCode' on='submit'}} class="card">

    <div class="logo">
      <img src="/favicon.png" class="logo-img">
    </div>

    {{#if message}}
    <div {{bind-attr class=":alert valid:alert-info:alert-danger error:alert-danger"}}>{{{message}}}</div>
    {{/if}}

    <div {{bind-attr class=":password-group :form-group errors.password:field-with-errors"}}>
      {{input value=confirmation_key class="form-control" autocapitalize="off" autocorrect="off" placeholderTranslation='confirmation_code'}}
    </div>

    <div class="form-group">
      <input type="submit" class="btn btn-primary form-control" {{translateAttr value='continue'}}>
    </div>

  </form>
</div>

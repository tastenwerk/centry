<div class="login-wrap">

  <form {{action 'sendConfirmationKey' on='submit'}} class="card">

    <div class="logo">
      <img src="/favicon.png" class="logo-img">
    </div>

    <div class="alert">{{t 'forgot_password_desc'}}</div>
    {{#if message}}
    <div {{bind-attr class=":alert valid:alert-info:alert-danger error:alert-danger"}}>{{{message}}}</div>
    {{/if}}

    {{#unless done}}
    <div {{bind-attr class=":form-group errors.email:field-with-errors"}}>
      {{input value=email class="form-control" autocapitalize="off" autocorrect="off" autocomplete="off" placeholderTranslation='email'}}
    </div>

    <div class="form-group">
      {{view 'selectize-simple-array'
            classes="form-control"
            promptTranslation="select_language"
            contentBinding="controller.controllers.sessions.availableLocales"
            optionLabelPath='content.label'
            optionValuePath='content.value'
            valueBinding='controller.controllers.sessions.selectedLocale'}}
    </div>

    <div class="form-group">
      <input type="submit" class="btn btn-primary form-control" {{translateAttr value='send_link'}}>
    </div>
    {{/unless}}

    <div class="form-group center">
      {{#link-to 'sessions.index'}}{{t 'back_to_login'}}{{/link-to}}
    </div>

  </form>
</div>
